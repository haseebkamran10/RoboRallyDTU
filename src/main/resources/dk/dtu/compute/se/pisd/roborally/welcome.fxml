<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dk.dtu.compute.se.pisd.roborally.controller.WelcomeController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.bottomAnchor="100.0">
            <ImageView fitHeight="100" fitWidth="100">
                <Image url="@robot.png"/>
            </ImageView>
            <Label text="Welcome to RoboRally Web" style="-fx-font-size: 18;" />
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="hostButton" text="Host Game" onAction="#handleHostGame" style="-fx-font-size: 16; -fx-padding: 10 20 10 20;"/>
                <Button fx:id="joinButton" text="Join Game" onAction="#handleJoinGame" style="-fx-font-size: 16; -fx-padding: 10 20 10 20;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
