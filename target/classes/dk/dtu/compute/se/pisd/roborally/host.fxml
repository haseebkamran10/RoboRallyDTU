<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dk.dtu.compute.se.pisd.roborally.controller.HostController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
            <Label text="Enter your nickname:" style="-fx-font-size: 14;" />
            <TextField fx:id="nicknameField" />
            <Label text="Select number of players" style="-fx-font-size: 14;" />
            <HBox alignment="CENTER" spacing="10">
                <RadioButton text="2" toggleGroup="$playersGroup" style="-fx-text-fill: white;"/>
                <RadioButton text="3" toggleGroup="$playersGroup" style="-fx-text-fill: white;"/>
                <RadioButton text="4" toggleGroup="$playersGroup" style="-fx-text-fill: white;"/>
                <RadioButton text="5" toggleGroup="$playersGroup" style="-fx-text-fill: white;"/>
                <RadioButton text="6" toggleGroup="$playersGroup" style="-fx-text-fill: white;"/>
            </HBox>
            <Label text="Select Map" style="-fx-font-size: 14;" />
            <HBox alignment="CENTER" spacing="10">
                <VBox>
                    <ImageView fitHeight="100" fitWidth="100">
                        <Image url="@course1.png"/>
                    </ImageView>
                    <RadioButton text="Course 1" toggleGroup="$mapGroup" style="-fx-text-fill: white;"/>
                </VBox>
                <VBox>
                    <ImageView fitHeight="100" fitWidth="100">
                        <Image url="@course2.png"/>
                    </ImageView>
                    <RadioButton text="Course 2" toggleGroup="$mapGroup" style="-fx-text-fill: white;"/>
                </VBox>
                <VBox>
                    <ImageView fitHeight="100" fitWidth="100">
                        <Image url="@course3.png"/>
                    </ImageView>
                    <RadioButton text="Course 3" toggleGroup="$mapGroup" style="-fx-text-fill: white;"/>
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
